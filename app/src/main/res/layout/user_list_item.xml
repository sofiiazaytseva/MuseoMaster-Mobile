<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/item_user_background">

    <ImageView
        android:id="@+id/workerIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"

        app:tint="@color/dark_green"
        android:src="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:text="Jakub" />

    <TextView
        android:id="@+id/secondNameTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:text="Kucaba" />



    <TextView
        android:id="@+id/work"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="0.6"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:text="Pracownik techniczny+" />

    <ImageView
        android:id="@+id/detailsIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        app:tint="@color/dark_green"
        android:src="@drawable/baseline_content_paste_search_24" />

</LinearLayout>
