<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.CuratorControllers.CreateExhibitionFragment"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="50dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exhibition Creation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <ScrollView
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Exhibition Name Text with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_drive_file_rename_outline_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exhibition Name"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Exhibition Name Text Input -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter exhibition name"
                android:background="@drawable/text_edit"
                android:id="@+id/exhibition_name"
                android:padding="16dp" />

            <!-- Room Text with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_room_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter room name"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Room name combobox -->
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:spinnerMode="dropdown"
                android:id="@+id/room_name"
                android:background="@drawable/text_edit"
                />

            <!-- Place of Creation Text with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_map_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place of creation"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Place of Creation Text Input -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Place of creation"
                android:id="@+id/place_name"
                android:background="@drawable/text_edit"
                android:padding="16dp" />

            <!-- Exhibition Theme Text with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_key_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theme"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Theme Input -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter theme"
                android:id="@+id/theme"
                android:background="@drawable/text_edit"
                android:padding="16dp" />

            <!-- Creator with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_person_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creator"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <!-- Creator Text Input -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Creator"
                android:id="@+id/creator"
                android:background="@drawable/text_edit"
                android:padding="16dp" />

            <!-- Date Pickers -->
        <!-- Start Date Text with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_calendar_today_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Start Date Text Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selected start date"
                    android:id="@+id/start_date"
                    android:background="@drawable/text_edit"
                    android:padding="16dp" />

                <ImageButton
                    android:id="@+id/start_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_edit_calendar_24"
                    android:background="@drawable/button_background"
                    android:drawablePadding="8dp"
                    android:padding="8dp" />

            </RelativeLayout>

        <!-- End Date Text with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_calendar_today_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- End Date Text Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selected end date"
                    android:id="@+id/end_date"
                    android:background="@drawable/text_edit"
                    android:padding="16dp" />

                <ImageButton
                    android:id="@+id/end_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_edit_calendar_24"
                    android:background="@drawable/button_background"
                    android:drawablePadding="8dp"
                    android:padding="8dp" />

            </RelativeLayout>


        <Button
            android:id="@+id/add_exhibition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:text="Create new exhibition"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/error_lbl"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Exhibition Creation error"
            android:textSize="17sp"
            android:visibility="gone"
            android:textColor="@color/error"
            android:textStyle="bold"
            android:padding="0dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>