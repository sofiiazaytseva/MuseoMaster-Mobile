<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.AdminControllers.AddRoomFragment"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="50dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Creation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp">

        <!-- Name Text with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/round_add_home_work_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of the room"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>



        <!-- Name Text Input -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter room name"
            android:background="@drawable/text_edit"
            android:id="@+id/name"
            android:padding="16dp" />

        <!-- Second Name Text with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_group_work_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size of the room"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Second Name Text Input -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter size of the room"
            android:id="@+id/size"
            android:background="@drawable/text_edit"
            android:padding="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_assured_workload_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of the room"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Position Combobox -->
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:spinnerMode="dropdown"
            android:id="@+id/typeRoom"
            android:background="@drawable/text_edit"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Create new room"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:id="@+id/add_room"
            android:textStyle="bold"
            android:padding="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/error_lbl"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="User Creation error"
            android:textSize="17sp"
            android:visibility="gone"
            android:textColor="@color/error"
            android:textStyle="bold"
            android:padding="0dp" />
    </LinearLayout>

</FrameLayout>